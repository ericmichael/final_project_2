<div class="container">
    <h1>Edit Post</h1>
    <form action="/posts/<%= @post.id %>/update" method="POST">
        Title: <input type="text" name="title" value="<%= @post.title %>"/><br/>
        Content: <input type="text" name="content" value="<%= @post.content %>"/><br/>
        <input type="submit" class="btn btn-primary"/>
    </form>
</div>